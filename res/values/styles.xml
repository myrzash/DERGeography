<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">@color/text_color_apptheme</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:editTextStyle">@style/AutoCompleteTextViewAppTheme</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
    </style>

    <style name="StyleTaskTitle">
        <item name="android:background">@drawable/bkg_title_game_2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    
     <style name="StyleTimer">        
        <item name="android:text">00:00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">@dimen/text_size_big_extra</item>
    </style>
    <style name="ButtonCity">
        <item name="android:background">@drawable/icon_city</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ButtonCity.info" parent="@style/ButtonCity">
        <item name="android:background">@null</item>
    </style>
