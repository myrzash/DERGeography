<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/frame_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bkg_main_2" >

            <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:onClick="onClickMenu"
                android:src="@drawable/icon_menu" />

            <CheckBox
                android:id="@+id/checkBoxSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/icon_square_ribbon"
                android:button="@drawable/icon_sound" />

            <TableLayout
                android:id="@+id/tableRLayoutExercises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_normal" >

                    <TextView
                        android:id="@+id/buttonPart1"
                        style="@style/PartTitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/buttonPart2"
                        style="@style/PartTitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/buttonPart3"
                        style="@style/PartTitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small" >

                    <ImageView
                        android:id="@+id/buttonExercise1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="10"
                        android:src="@drawable/icon_exercise" />

                    <ImageView
                        android:id="@+id/buttonExercise4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="20"
                        android:src="@drawable/icon_exercise" />

                    <ImageView
                        android:id="@+id/buttonExercise7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="30"
                        android:src="@drawable/icon_exercise" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small" >

                    <ImageView
                        android:id="@+id/buttonExercise2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="40"
                        android:src="@drawable/icon_exercise" />

                    <ImageView
                        android:id="@+id/buttonExercise5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="60"
                        android:src="@drawable/icon_exercise" />

                    <ImageView
                        android:id="@+id/buttonExercise8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="70"
                        android:src="@drawable/icon_exercise" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small" >

                    <ImageView
                        android:id="@+id/buttonExercise3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="80"
                        android:src="@drawable/icon_exercise" />

                    <ImageView
                        android:id="@+id/buttonExercise6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="90"
                        android:src="@drawable/icon_exercise" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:id="@+id/imageBoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_normal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageBoyBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageBoyHide"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/boy_body" />

                <ImageView
                    android:id="@+id/imageBoyHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/animlist_boy_hide" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imageDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/padding_normal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageDogBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageDogHide"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/dog_body" />

                <ImageView
                    android:id="@+id/imageDogHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/animlist_dog_hide" />
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/list_slidermenu"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/menu_bkg"
            android:choiceMode="singleChoice"
            android:divider="@color/translucent_dark"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/menu_list_selector" />
    </android.support.v4.widget.DrawerLayout>

    <ImageView
        android:id="@+id/imageViewStarMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/star"
        android:visibility="invisible" />

</RelativeLayout>