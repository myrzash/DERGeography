<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_normal"
        android:background="@drawable/dialog"
        android:padding="@dimen/padding_normal" >

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/padding_normal"
            android:gravity="center"
            android:textColor="@color/menu_bkg"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_big" />

        <ImageView
            android:id="@+id/buttonMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:background="@drawable/icon_square_ribbon"
            android:scaleType="centerInside"
            android:src="@drawable/home_pink" />

        <ImageView
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/icon_square_ribbon"
            android:scaleType="centerInside"
            android:src="@drawable/next_pink" />

        <ImageView
            android:id="@+id/buttonRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="@drawable/icon_square_ribbon"
            android:scaleType="centerInside"
            android:src="@drawable/restart_pink" />
    </FrameLayout>

    <Button
        android:id="@+id/imageClose"
        style="@style/StyleCloseButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top" />

</FrameLayout>