    <style name="StyledDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_apptheme</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="PartTitles">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:background">@drawable/part_titles</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonAppTheme.pink" parent="@style/ButtonAppTheme">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <style name="ButtonAppTheme.beige" parent="@style/ButtonAppTheme">
        <item name="android:background">@drawable/button_beige</item>
    </style>

    <style name="ButtonCountries">
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ButtonRegions">
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TitleInfo">
        <item name="android:textColor">@color/brown</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_normal_extra</item>
        <item name="android:textSize">@dimen/text_size_big_extra</item>
        <item name="android:rotation">-2</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ThemeDialog" parent="@android:style/Theme.Panel">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/brown</item>
            </style>

    <style name="AutoCompleteTextViewAppTheme" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">@color/text_color_apptheme</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="StyleButtonUp">
        <item name="android:background">@drawable/icon_up</item>
    </style>

    <style name="StyleCloseButon">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/icon_close</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">x</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">@dimen/text_size_big_extra</item>
    </style>

    <style name="StyleScoreView">
        <item name="android:background">@drawable/bkg_score</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big_extra</item>
    </style>

</resources>